/* pages/index/continents/Asia/asia.wxss */
.pic-context-grounp .pic-context-item{
  display: flex;
  justify-content: space-around;
  height: 180rpx;
  width: 100%;
  margin-top: 16rpx;
  /* background-color: #eee; */
  /* border-bottom: 1px solid #ddd; */
}
.pic-context-grounp .pic-context-item .round-pic{
  width: 180rpx;
  overflow: hidden;
  /* border: 1px solid blue; */
}
.pic-context-grounp .pic-context-item .round-pic image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.pic-context-grounp .pic-context-item .item-context{
  width: calc(96% - 240rpx);
  padding-top: 4rpx;
  /* border: 1px solid blue; */
  border-bottom: 2rpx solid #e9f9b9;
  
}
.pic-context-grounp .pic-context-item .item-context .context-title{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pic-context-grounp .pic-context-item .item-context .context-text{
  height: 140rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  word-break: break-all;
}
.pic-context-grounp .pic-context-item .share-like{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  /* border: 1px solid blue; */
}
.pic-context-grounp .pic-context-item .share-like image{
  width: 100%;
  height: 100%;
}