/* pages/special/special.wxss */
.container .pic-wrapper{
  width: 100%;
}
.container .pic-wrapper image{
  display: flex;
  width: 100%;
  border-top: 1px solid #acd54a;
}
.container .title-wrapper{
  /* text-align: center; */
  padding: 10rpx 25rpx;
}
.container .article-operation{
  width: 100%;
  height: 40px;
  padding: 0rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #e9f9b9; 
}
.container .article-operation .icon-wrapper image{
  height: 35px;
  width: 35px;
}
.container .article-operation .icon-wrapper text{
  display: inline-block;
  height: 20px;
  vertical-align: 12px;
  font-size: 14px;
}
.container .text-wrapper{
  padding: 0rpx 25rpx;
  font-size: 14px;
  text-indent: 2em;
}
.container .end-info{
  width: 80%;
  margin-top: 15px;
  padding-bottom: 15px;
  border-top: 1px solid #e9f9b9;
  text-align: center;
  position: relative;
}
.container .end-info text{
  width: 50px;
  position: absolute;
  top: -10px;
  z-index: 10;
  margin-left: -25px;
  text-align: center;
  font-size: 12px;
  color: #999;
  background: #fff;
}
.container .comments-wrapper{
  width: 100%;
}
.container .comments-wrapper .comment-group{
  width: 100%;
  padding: 10rpx 25rpx;
}
.container .comments-wrapper .comment-group > view {
  font-size: 14px;
  font-weight: bold;
}
.container .comments-wrapper .comment-group .comment-item {
  display: flex;
  /* width: 100%; */
  margin-top: 10rpx;
  padding-right: 30rpx;
}
.container .comments-wrapper .comment-group .comment-item image.userImg{
  display: inline-block;
  width: 30px;
  height: 30px;
  margin-right: 20rpx;
}
.container .comments-wrapper .comment-group .comment-item .comment-content{
  display: inline-block;
  flex: 1;
  font-size: 12px;
  padding: 0px 5px 8px 0px;
  margin-right: 10px;
  border-bottom: 1px solid #eee;
}
.container .comments-wrapper .comment-group .comment-item .comment-content view{
  text-indent: 1em;
}
.container .post-wrapper{
  width: 100%;
  background-color: #fff;
}
.container .post-wrapper .post-comment{
  display: flex;
  padding: 10rpx 25rpx;
}
.container .post-wrapper .post-comment .input{
  flex: 1;
  display: inline-block;
  font-size: 16px;
  padding: 5px 15px;
  border-bottom: 1px solid #acd54a;
  border-left: 1px solid #acd54a;
}
.container .post-wrapper .post-comment button{
  display: inline-block;
  margin-left: 10px;
  box-sizing: border-box;
  border-radius: 6px;
  border: 1px solid #acd54a;
  background-color: #e9f9b9;
}