<!--index.wxml-->
<view class="container">
  <!-- header-swiper part -->
  <swiper class="header-swiper-group" indicator-dots indicator-color="#fff" indicator-active-color="#ff4a20" current-item-id="0">
    <swiper-item wx:for="{{ swiperImgSrc }}" wx:for-item="swiperPic" wx:key="{{ id }}" item-id="{{ swiperPic.id }}">
      <image src="{{ swiperPic.src }}"></image>
    </swiper-item>
  </swiper>
  <view class="home-main-content">
    <!-- include navbar for modules file -->
    <include src="/pages/modules/navbar.wxml"/>
    <!-- main content area -->
    <view class="pic-context-grounp">
      <!-- use for-loop to achieve adding single content part -->
      <view class="pic-context-item" wx:for="{{ content }}" wx:for-item="contentItem" wx:key="{{ id }}">
        <view class="round-pic">
          <image src="{{ contentItem.src }}" mode="aspectFill"></image>
        </view>
        <view class="item-context">
          <view class="context-title">
            <text>{{ contentItem.title }}</text>
          </view>
          <view class="context-text">
            <text>{{ contentItem.text }}</text>
          </view>
        </view>
        <!-- add share-like icons -->
        <view class="share-like">
          <image wx:for="{{ shareLikeIcon }}" wx:key="{{ id }}" data-id="{{ item.id }}{{ contentItem.id }}" src="{{ item.bfeSrc }}" bindtap="shareLike" ></image>
        </view>
      </view>
